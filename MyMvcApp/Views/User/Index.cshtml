@model IEnumerable<MyMvcApp.DAL.Models.User>
@{
    ViewData["Title"] = "User";
}
<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-success">新規ユーザー登録</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>UserName</th>
            <th>Email</th>
            <th>CreatedAt</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>
                <form asp-action="Delete" method="post" asp-route-id="@user.Id" style="display:inline">
                    <input type="hidden" name="id" value="@user.Id" />
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('本当に削除しますか？');">削除</button>
                    @Html.AntiForgeryToken()
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
